<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FraisForfait">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <include layout="@layout/header">
        </include>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="         PARAMETRES"
            android:textSize="40dp" />

        <TextView
            android:labelFor="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="Mail:"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </EditText>
        <TextView
            android:labelFor="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Nom:"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/nom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </EditText>
        <TextView
            android:labelFor="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Prenom:"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/prenom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </EditText>
        <TextView
            android:labelFor="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Code visiteur:"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/CodeVisiteur"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </EditText>
        <TextView
            android:labelFor="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="URL visiteur:"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/URLvisiteur"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </EditText>
        <TextView
            android:labelFor="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="Mot de passe:"
            android:textSize="25dp"
            />
        <EditText
            android:id="@+id/MDP"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </EditText>
        <Button
            android:id="@+id/enregistrer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="170dp"

            android:text="enregistrer" />

        <include layout="@layout/footer">
        </include>








    </LinearLayout>
</ScrollView>