<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FraisHorsForfait">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">
        <include layout="@layout/header">

        </include>

        <TextView
            android:id="@+id/fraisHForfait"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.3"
            android:text="         FRAIS HORS FORFAIT"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp" />


        <TextView
            android:labelFor="@+id/libelle"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Libelle:"
            android:textSize="25dp" />
        <EditText
            android:id="@+id/libelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"></EditText>

        <TextView
            android:labelFor="@+id/montant"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Montant:"
            android:textSize="25dp"
            tools:ignore="DuplicateIds" />
        <EditText
            android:id="@+id/montant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"></EditText>

        <TextView
            android:id="@+id/dateDepense"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Date de la dÃ©pense:"
            android:textSize="25dp"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/maDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="jj-MM-aaaa"
            android:inputType="date" />

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="ShowCal"
            app:srcCompat="@drawable/newcal" />
    </LinearLayout>






        <TextView
            android:id="@+id/justificatif"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Justificatif:"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnAjouterFHF"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="AJOUTER"
            tools:layout_editor_absoluteY="600dp"
            android:onClick="setBtnAjouterFHF"/>



        <include layout="@layout/footer">
        </include>


    </LinearLayout>


</ScrollView>

